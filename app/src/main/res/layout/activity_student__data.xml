<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiwari.studence.Create_class"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <EditText
        android:id="@+id/studentname"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/text_input_section"
        android:gravity="center"
        android:hint="Student Name"
        android:textSize="18dp"

        />

    <EditText
        android:id="@+id/studentrollno"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_input_section"
        android:gravity="center"
        android:hint="Roll_Number"
        android:textSize="18dp"

        />
    <Spinner
        android:layout_gravity="center"
        android:id="@+id/studentclass"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="40dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        />
    <ImageView
        android:id="@+id/studentfingerprint"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/scan_btn"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"/>
    <Button
        android:id="@+id/submitdata"
        android:layout_width="300dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="60dp"
        android:background="@drawable/text_input_section"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/testcode"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/scan_btn"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"/>

</LinearLayout>
